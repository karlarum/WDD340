<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>
  
  <%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

   <!-- form for adding new classification -->
  <div class="clasification-container">
    <form class="addClassificationForm" action="/inv/add-classification" method="post">
        <div class="form-group">
            <label for="classification_name">Classification Name:</label>
            <input 
                type="text" 
                id="classification_name" 
                name="classification_name" 
                required 
                pattern="^[a-zA-Z0-9]+$"
                title="Please enter only letters and numbers (no spaces or special characters)"
            >
            <span class="form-instruction">Name cannot contain spaces or special characters</span>
        </div>
        
        <div class="form-group">
            <button type="submit">Add Classification</button>
        </div>
    </form>
  </div>